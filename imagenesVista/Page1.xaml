<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imagenesVista.Page1">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Image x:Name="x1" HeightRequest="400" WidthRequest="400">
                <Image.GestureRecognizers>
                    <SwipeGestureRecognizer Swiped="Swipe" Direction="Down"/>
                    <PinchGestureRecognizer PinchUpdated="Zoom" />
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>